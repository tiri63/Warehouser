<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_background"
    android:paddingStart="10dp"
    android:paddingTop="2dp"
    android:paddingEnd="2dp"
    android:paddingBottom="2dp">

    <TextView
        android:id="@+id/ui_shelf_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="ItemName"
        android:textColor="@color/FontColorDim"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/ui_shelf_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:padding="2dp"
        android:text="50"
        android:textColor="@color/FontColorDim"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/ui_goods_model"
        app:layout_constraintTop_toTopOf="@+id/ui_goods_model">

    </TextView>

    <TextView
        android:id="@+id/ui_shelf_item_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingEnd="2dp"
        android:paddingRight="2dp"
        android:text="ä¸ª"
        android:textColor="@color/FontColorDim"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/ui_shelf_item_count" app:layout_constraintTop_toTopOf="@+id/ui_shelf_item_count">

    </TextView>

    <TextView
        android:id="@+id/ui_shelf_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:padding="2dp"
        android:text="1-1(Main Shelf)"
        android:textColor="@color/FontColorDim"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ui_shelf_item_name"
        app:layout_constraintStart_toEndOf="@+id/ui_shelf_item_name"
        app:layout_constraintTop_toTopOf="@+id/ui_shelf_item_name">

    </TextView>

    <TextView
        android:id="@+id/ui_goods_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:padding="2dp"
        android:text="No.1000001"
        android:textColor="@color/FontColorDim"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ui_shelf_item_name"
        app:layout_constraintStart_toEndOf="@+id/ui_shelf_id"
        app:layout_constraintTop_toTopOf="@+id/ui_shelf_item_name">

    </TextView>

    <TextView
        android:id="@+id/ui_goods_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="2dp"
        android:text="M-1"
        android:textColor="@color/FontColorDim"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/ui_shelf_item_name"
        app:layout_constraintTop_toBottomOf="@+id/ui_shelf_item_name">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>