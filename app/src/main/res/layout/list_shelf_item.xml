<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BackgroundColor"
    android:paddingStart="5dp"
    android:paddingTop="10dp"
    android:paddingEnd="5dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/ui_shelf_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:padding="5dp"
        android:text="ItemName"
        android:textColor="@color/FontColorDim"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/ui_shelf_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:text="50"
        android:textColor="@color/FontColorDim"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/ui_shelf_id"
        app:layout_constraintStart_toEndOf="@+id/ui_shelf_id"
        app:layout_constraintTop_toTopOf="@+id/ui_shelf_id"></TextView>

    <TextView
        android:id="@+id/ui_shelf_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:text="1-1(Main Shelf)"
        android:textColor="@color/FontColorDim"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/ui_shelf_item_name"
        app:layout_constraintStart_toEndOf="@+id/ui_shelf_item_name"
        app:layout_constraintTop_toTopOf="@+id/ui_shelf_item_name"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>